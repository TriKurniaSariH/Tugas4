<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageCharacter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idNamaKarakter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Karakter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/idJabatanKarakter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jabatan Karakter"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/idBountyKarakter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bounty: 1.500.000.000"
                android:textSize="14sp"
                android:textColor="#D32F2F"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
